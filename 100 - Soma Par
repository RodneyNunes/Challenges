import random
def sorteio(num):
    print('Sorteando valores de 1 a 5:')
    for c in range(1, 6):
        num.append(random.randint(1, 10))
def somapar(num):
    soma = 0
    for v in num:
        if v % 2 == 0:
            soma += v
    print(num)
    print(f'A soma dos valores pares Ã© {soma}!')


lista = []
sorteio(lista)
somapar(lista)
